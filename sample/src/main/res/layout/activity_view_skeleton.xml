<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ethanhua.skeleton.sample.ViewActivity">


    <View
        android:id="@+id/img_banner"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="@color/light_transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />


    <View
        android:id="@+id/img_knowledge"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_transparent"
        app:layout_constraintLeft_toLeftOf="@+id/img_banner"
        app:layout_constraintRight_toLeftOf="@+id/img_story"
        app:layout_constraintTop_toBottomOf="@+id/img_banner" />

    <View
        android:id="@+id/tv_knowledge"
        android:layout_width="56dp"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_transparent"
        app:layout_constraintLeft_toLeftOf="@+id/img_knowledge"
        app:layout_constraintRight_toRightOf="@+id/img_knowledge"
        app:layout_constraintTop_toBottomOf="@+id/img_knowledge" />

    <View
        android:id="@+id/img_story"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_transparent"
        app:layout_constraintLeft_toRightOf="@+id/img_knowledge"
        app:layout_constraintRight_toLeftOf="@+id/img_service"
        app:layout_constraintTop_toBottomOf="@+id/img_banner" />

    <View
        android:id="@+id/tv_story"
        android:layout_width="56dp"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_transparent"
        app:layout_constraintLeft_toLeftOf="@+id/img_story"
        app:layout_constraintRight_toRightOf="@+id/img_story"
        app:layout_constraintTop_toBottomOf="@+id/img_story" />

    <View
        android:id="@+id/img_service"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_transparent"
        app:layout_constraintLeft_toRightOf="@+id/img_story"
        app:layout_constraintRight_toLeftOf="@+id/img_topic"
        app:layout_constraintTop_toBottomOf="@+id/img_banner" />

    <View
        android:id="@+id/tv_service"
        android:layout_width="56dp"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_transparent"
        app:layout_constraintLeft_toLeftOf="@+id/img_service"
        app:layout_constraintRight_toRightOf="@+id/img_service"
        app:layout_constraintTop_toBottomOf="@+id/img_service" />

    <View
        android:id="@+id/img_topic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_transparent"
        app:layout_constraintLeft_toRightOf="@+id/img_service"
        app:layout_constraintRight_toRightOf="@+id/img_banner"
        app:layout_constraintTop_toBottomOf="@+id/img_banner" />

    <View
        android:id="@+id/tv_topic"
        android:layout_width="56dp"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_transparent"
        app:layout_constraintLeft_toLeftOf="@+id/img_topic"
        app:layout_constraintRight_toRightOf="@+id/img_topic"
        app:layout_constraintTop_toBottomOf="@+id/img_topic" />


    <View
        android:id="@+id/divider_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_topic"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <View
        android:id="@+id/divider_2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <View
        android:layout_width="60dp"
        android:layout_height="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/light_transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider_2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <View
        android:id="@+id/tv_more"
        android:layout_width="60dp"
        android:layout_height="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/light_transparent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider_2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <View
        android:id="@+id/avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:background="@color/light_transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_more"
        />
    <View
        android:id="@+id/tv_title"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toRightOf="@+id/avatar"
        app:layout_constraintTop_toTopOf="@id/avatar"
        android:background="@color/light_transparent"
        android:layout_marginLeft="16dp"
        android:layout_width="80dp"
        android:layout_height="16dp"
        />
    <View
        android:id="@+id/tv_content"
        app:layout_constraintLeft_toRightOf="@+id/avatar"
        android:layout_marginLeft="16dp"
        android:background="@color/light_transparent"
        android:text="话题描述话题描述话题描述话题描述话题描述话题描述话题描述话题描述话题描述"
        android:layout_width="120dp"
        android:layout_marginBottom="2dp"
        android:layout_height="12dp"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        />
    <View
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_content"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorLine"
        android:layout_marginLeft="10dp"
        android:layout_height="0.5dp"
        android:id="@+id/divider" />

    <View
        android:id="@+id/avatar1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/light_transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        />
    <View
        android:id="@+id/tv_title1"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toRightOf="@+id/avatar1"
        app:layout_constraintTop_toTopOf="@id/avatar1"
        android:background="@color/light_transparent"
        android:layout_marginLeft="16dp"
        android:layout_width="80dp"
        android:layout_height="16dp"
        />
    <View
        android:id="@+id/tv_content1"
        app:layout_constraintLeft_toRightOf="@+id/avatar1"
        android:layout_marginLeft="16dp"
        android:background="@color/light_transparent"
        android:text="话题描述话题描述话题描述话题描述话题描述话题描述话题描述话题描述话题描述"
        android:layout_width="120dp"
        android:layout_marginBottom="2dp"
        android:layout_height="12dp"
        app:layout_constraintBottom_toBottomOf="@id/avatar1"
        />
    <View
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_content1"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorLine"
        android:layout_marginLeft="10dp"
        android:layout_height="0.5dp"
        android:id="@+id/divider1" />
    <View
        android:id="@+id/avatar2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/light_transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        />
    <View
        android:id="@+id/tv_title2"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toRightOf="@+id/avatar2"
        app:layout_constraintTop_toTopOf="@id/avatar2"
        android:background="@color/light_transparent"
        android:layout_marginLeft="16dp"
        android:layout_width="80dp"
        android:layout_height="16dp"
        />
    <View
        android:id="@+id/tv_content2"
        app:layout_constraintLeft_toRightOf="@+id/avatar2"
        android:layout_marginLeft="16dp"
        android:background="@color/light_transparent"
        android:text="话题描述话题描述话题描述话题描述话题描述话题描述话题描述话题描述话题描述"
        android:layout_width="120dp"
        android:layout_marginBottom="2dp"
        android:layout_height="12dp"
        app:layout_constraintBottom_toBottomOf="@id/avatar2"
        />
    <View
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_content2"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorLine"
        android:layout_marginLeft="10dp"
        android:layout_height="0.5dp"
        android:id="@+id/divider2" />
</androidx.constraintlayout.widget.ConstraintLayout>
